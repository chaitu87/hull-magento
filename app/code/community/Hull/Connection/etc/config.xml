<?xml version="1.0" encoding="UTF-8"?>
<config>
  <modules>
    <Hull_Connection>
      <version>0.0.3</version>
    </Hull_Connection>
  </modules>
  <global>
    <models>
      <hull_connection>
        <class>Hull_Connection_Model</class>
      </hull_connection>
    </models>
    <resources>
      <hull_connection_setup>
        <setup>
          <module>Hull_Connection</module>
          <class>Mage_Customer_Model_Entity_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </hull_connection_setup>
    </resources>
    <blocks>
      <hull_connection>
        <class>Hull_Connection_Block</class>
      </hull_connection>
    </blocks>
    <helpers>
      <hull_connection>
        <class>
          Hull_Connection_Helper
        </class>
      </hull_connection>
    </helpers>
  </global>
  <frontend>
    <events>
      <customer_login>
        <observers>
          <hull_connection>
            <type>singleton</type>
            <class>hull_connection/observer_customer</class>
            <method>customerJustLoggedIn</method>
          </hull_connection>
        </observers>
      </customer_login>
      <customer_logout>
        <observers>
          <hull_connection>
            <type>singleton</type>
            <class>hull_connection/observer_customer</class>
            <method>customerJustLoggedOut</method>
          </hull_connection>
        </observers>
      </customer_logout>
      <controller_action_predispatch>
        <observers>
          <hull_connection>
            <type>singleton</type>
            <class>hull_connection/observer_customer</class>
            <method>currentCustomer</method>
          </hull_connection>
        </observers>
      </controller_action_predispatch>
    </events>
    <routers>
      <hull>
        <use>standard</use>
        <args>
          <module>Hull_Connection</module>
          <frontName>hull</frontName>
        </args>
      </hull>
    </routers>
    <layout>
      <updates>
        <hull module="Hull_Connection">
          <file>hull/connection.xml</file>
        </hull>
      </updates>
    </layout>
  </frontend>
  <adminhtml>
    <events>
      <catalog_product_save_after>
        <observers>
          <hull_connection>
            <type>singleton</type>
            <class>hull_connection/observer_product</class>
            <method>updateEntity</method>
          </hull_connection>
        </observers>
      </catalog_product_save_after>
    </events>
    <acl>
      <resources>
        <admin>
          <children>
            <system>
              <children>
                <config>
                  <children>
                    <hull_options>
                      <title>Hull.io Configuration</title>
                    </hull_options>
                  </children>
                </config>
              </children>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
</config>
